<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <!-- Console Appender 输出到控制台 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %p - %c{1} - %m%n"/>
        </Console>

        <!-- File Appender 输出到文件 -->
        <File name="File" fileName="/opt/app/flappy-word/backend/logs/info.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %p - %c{1} - %m%n"/>
        </File>
    </Appenders>

    <!-- Loggers: 定义日志记录器 -->
    <Loggers>
        <!-- 根日志记录器，设置默认日志级别为 INFO -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>